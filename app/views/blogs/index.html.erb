<h2>ブログ一覧画面</h2>
<table>
    <tr>
        <th>タイトル</th>
        <th></th>
    </tr>
    
    <% @blogs.each do |blog| %>
    <tr>
        <td><%= blog.title %></td>
        <td><%= blog.content %></td>
        <td><%= link_to 'ブログを編集する',edit_blog_path(blog.id) %></td>
        <td><%= link_to 'ブログを削除する',blog_path(blog.id),method::delete,data:{confirm:'本当に削除してよろしいですか？'} %></td>
    </tr>
    <% end %>
</table>
<%= link_to 'ブログを作成する',new_blog_path %>
        
